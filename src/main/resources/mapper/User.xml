<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.savy.dao.UserMapper">

    <select id="getUserId" resultType="Integer">
        select
          user_id
        from user
        where user_name = #{userName}
        and
        password = #{password}
    </select>

    <select id="getUserById" resultType="User">
        select
          user_id,
          permission_id,
          name,
          sex,
          phone,
          email,
          last_login_date
        from user
        where user_id = #{userId}
    </select>
    <insert id="insertUser">
        insert into user(user_name,password,permission_id,name,sex,phone,email)
        values (#{userName},#{password},#{permissionId},#{name},#{sex},#{phone},#{email})

    </insert>
    <insert id="addUser">
        insert into user(user_name,password,permission_id)
        values (#{userName},#{password},#{permissionId});
    </insert>
    <select id="selectUser" parameterType="java.lang.String" resultType="com.savy.model.User">
        select *
        from user,permission
        where user.permission_id=permission.permission_id
        limit ${start},${end}
    </select>
    <select id="userCount" resultType="Integer">
        select count(*)
        from user
    </select>
    <update id="updateUser">
        update user
        <set>
            <if test="userName!=''and userName!=null">
                user_name = #{userName},
            </if>
            <if test="password!=''and password!=null">
                password = #{password},
            </if>
            <if test="permissionId!=''and permissionId!=null">
                permission_id = #{permissionId},
            </if>
        </set>
        where user_id = #{userId}
    </update>
    <delete id="deleteUser" parameterType="com.savy.model.User">
        delete
        from user
        where user_id=#{userId}
    </delete>
    <select id="searchPermission" resultType="Integer">
        select permission_id
        from user
        where user_name=#{userName}
    </select>
    <select id="login" resultType="Integer">
        select count(*)
        from user
        where user_name=#{userName} and password=#{password}
    </select>
    <select id="selectID" resultType="Integer">
        select user_id
        from user
        where user_name=#{userName}
    </select>
</mapper>