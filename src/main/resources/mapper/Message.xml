<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.savy.dao.MessageMapper">
    <insert id="insertMessage">
        insert into message(message_content,message_date,image_url,voice_url,video_url,type_id)
        values (#{messageContent},#{messageDate},#{imageUrl},#{voiceUrl},#{videoUrl},#{typeId})
    </insert>
    <select id="selectMessage" parameterType="java.lang.String" resultType="com.savy.model.Message">
        select *
        from message,message_type
        <where>
            <if test="messageDate!=''and messageDate!=null">
                and message_date >= #{messageDate}
            </if>
            <if test="typeId!=''and typeId!=null">
                and message.type_id=message_type.type_id = #{typeId}
            </if>
            <if test="isReplay!='' and isReplay!=null">
                and is_replay = #{isReplay}
            </if>
            <if test="userId!='' and userId!=null">
                and user_id = #{userId}
            </if>
        </where>
    </select>
    <select id="selectProblem" resultType="String">
        select message_content
        from message
        where super_message_id=#{superMessageId}
    </select>
    <update id="updateReply">
        update message
        set message_content = #{messageContent}
        where message_id = #{messageId}
    </update>

</mapper>