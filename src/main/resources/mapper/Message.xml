<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.savy.dao.MessageMapper">
    <insert id="insertMessage">
        insert into message(message_content,message_date,image_url,voice_url,video_url,type_id,message_title)
        values (#{messageContent},#{messageDate},#{imageUrl},#{voiceUrl},#{videoUrl},#{typeId},#{messageTitle})
    </insert>
    <select id="selectTypeName" parameterType="java.lang.String" resultType="com.savy.model.MessageType">
        select *
        from message_type
    </select>
    <select id="select_Type" resultType="Integer">
        select count(*)
        from message_type
        where type_name=#{typeName}
    </select>
    <insert id="insertTypeName">
        insert into message_type(type_name)
        values (#{typeName})
    </insert>
    <delete id="deleteTypeName">
        delete
        from  message_type
        where  type_id =${typeId}
    </delete>
    <select id="selectMessage" parameterType="java.lang.String" resultType="com.savy.model.Message">
        select *
        from message,message_type
        <where>
            <if test="messageDate!=''and messageDate!=null">
                and message_date >= ${messageDate}
            </if>
            <if test="endDate!='' and endDate!=null">
                and message_date &lt;= ${endDate}
            </if>
            <if test="typeId!=''and typeId!=null">
                and message.type_id=${typeId}
                and message.type_id=message_type.type_id
            </if>
            <if test="isReplay!='' and isReplay!=null">
                and is_replay = ${isReplay}
            </if>
            <if test="userId!='' and userId!=null">
                and user_id = ${userId}
            </if>
            <if test="messageTitle!=''and messageTitle!=null">
                and message_title = #{messageTitle}
            </if>
        </where>
    </select>
    <insert id="addReply">
        insert into message (super_message_id,message_content,message_date,image_url,voice_url,video_url,user_id)
        values (#{superMessageId},#{messageContent},#{messageDate},#{imageUrl},#{voiceUrl},#{videoUrl},#{userId})
    </insert>
    <select id="viewProblem" parameterType="java.lang.String" resultType="com.savy.model.Message">
        select *
        from message
        where super_message_id= ${superMessageId}
    </select>
    <delete id="deleteProblem" parameterType="com.savy.model.Message">
        delete
        from message
        where message_id=${messageId}
    </delete>
    <delete id="deleteReply" parameterType="com.savy.model.Message">
        delete
        from message
        where super_message_id= ${superMessageId}
    </delete>
    <update id="addMessageGrade">
        update message
        set message_grade=#{messageGrade}
        where message_id=#{messageId}
    </update>
</mapper>